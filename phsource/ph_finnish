
//====================================================
//  Finnish
//====================================================

phoneme : //  Lengthen previous vowel by "length"
  virtual
  length 90
endphoneme



phoneme i
  vowel starttype (i) endtype (i)
  length 140
  formants vowel/i:
endphoneme

phoneme e
  vowel starttype (e) endtype (e)
  length 160
  formants vwl_af/E
endphoneme


phoneme &
  vowel starttype (a) endtype (a)
  length 170
  formants vowel/&
endphoneme

phoneme a
  vowel starttype (a) endtype (a)
  length 180
  formants vwl_fi/A
endphoneme


phoneme o
  vowel starttype (o) endtype (o)
  length 160
  formants vowel/O:
endphoneme

phoneme Y
  vowel starttype (@) endtype (@)
  length 160
  formants vowel/Y
endphoneme


phoneme u
  vowel starttype (u) endtype (u)
  length 150
  formants vowel/u:
endphoneme

phoneme y
  vowel starttype (u) endtype (u)
  length 140
  formants vowel/y
endphoneme



