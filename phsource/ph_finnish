
//====================================================
//  Finnish
//====================================================

phoneme : //  Lengthen previous vowel by "length"
  virtual
  length 140
endphoneme



phoneme i
  vowel starttype (i) endtype (i)
  length 150
  formants vwl_en/i:
  linkout ;
endphoneme

phoneme e
  vowel starttype (e) endtype (e)
  length 160
  formants vowel/e:
endphoneme


phoneme &
  vowel starttype (a) endtype (a)
  length 160
  formants vowel/&
endphoneme


phoneme a
  vowel starttype (a) endtype (a)
  length 180
  formants vwl_fi/A
endphoneme

phoneme a2    // TEST
  vowel starttype (a) endtype (a)
  length 180
  formants vwl_fi/A_1
endphoneme


phoneme o
  vowel starttype (o) endtype (o)
  length 165
  formants vowel/O:
endphoneme

phoneme Y
  vowel starttype (@) endtype (@)
  length 165
  formants vowel/Y
endphoneme


phoneme u
  vowel starttype (u) endtype (u)
  length 150
  formants vowel/u_bck
endphoneme

phoneme u1    // TEST
  vowel starttype (u) endtype (u)
  length 150
  formants vwl_fi/u
endphoneme



