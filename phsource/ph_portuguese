
//====================================================
//  Portuguese  - based on Italian
//====================================================

phoneme e~
  vowel starttype (e) endtype (e)
  length 240
  formants vwl_pt/e_n
endphoneme

phoneme i~
  vowel starttype (i) endtype (i)
  length 240
  formants vwl_pt/i_n
  linkout ;
endphoneme

phoneme o~
  vowel starttype (o) endtype (o)
  length 240
  formants vwl_pt/o_n
endphoneme

phoneme u~
  vowel starttype (u) endtype (u)
  length 180
  formants vwl_pt/u_n
endphoneme

phoneme &~
  vowel  starttype (@) endtype (@)
  length 240
  formants vwl_pt/&_n
endphoneme

phoneme &U~
  vowel  starttype (a) endtype (@)
  length 240
  formants vwl_pt/&U_n
endphoneme

phoneme oI~
  vowel starttype (o) endtype (i)
  length 260
  formants vwl_pt/oI_n
endphoneme




phoneme &
  vowel starttype (@) endtype (@)
  length 180
  formants vwl_it/&
endphoneme

phoneme &/       // Used for final "a" when next word starts with "a"
  vowel starttype (@) endtype (@)
  beforevowel NULL
  length 180
  formants vwl_it/&
endphoneme

phoneme E
  vowel starttype (e) endtype (e)
  length 170
  formants vwl_af/E2
endphoneme

phoneme e
  vowel starttype (e) endtype (e)
  length 160
  formants vowel/e:
endphoneme

phoneme e2        // a closer version of [e]
  vowel starttype (e) endtype (e)
  length 160
  formants vwl_pt/e
endphoneme


phoneme i/            // changes to [j] before a vowel
  vowel starttype (i) endtype (i)
  beforevowel j
  length 150
  formants vowel/i:
  linkout ;
endphoneme


phoneme O
  vowel starttype (o) endtype (o)
  length 170
  formants vowel/0
endphoneme





phoneme aI
  vowel starttype (a) endtype (i)
  length 230
  formants vwl_it/ai
endphoneme


phoneme eI
  vowel starttype (e) endtype (i)
  length 210
  formants vowel/eI
endphoneme


phoneme EI
  vowel starttype (e) endtype (i)
  length 230
  formants vowel/EI
endphoneme


phoneme OI
  vowel starttype (o) endtype (i)
  length 230
  formants vowel/0I
endphoneme


phoneme eU
  vowel starttype (e) endtype (u)
  length 230
  formants vowel/eU
endphoneme


phoneme EU
  vowel starttype (e) endtype (u)
  length 230
  formants vowel/EU
endphoneme




phoneme l
  liquid
  length 100
  lengthmod 7
  beforenotvowel l/2       // use 'dark' [l] after a vowel, should be [w]
  formants l/l
  after _ l/_l  t l/tl
  before _ l/l_
endphoneme



phoneme x   // for "r"
  vcd vel frc
  vowelin f1=0  f2=1500 0 400  f3=-500 100
  vowelout f1=0 f2=1500 0 400  f3=-500 100  rms=20
  lengthmod 6
  formants voc/Q_less+unvoc/xx%140
  before _ voc/Q_+unvoc/xx
  switchvoicing x
endphoneme


