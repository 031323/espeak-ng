
//====================================================
//  Esperanto
//====================================================


phoneme a
  vowel starttype (a) endtype (a)
  length 220
  formants vwl_it/a
  reduceto &  4
endphoneme


phoneme &
  vowel starttype (@) endtype (@)
  length 220
  formants vwl_it/&
endphoneme



phoneme e
  vowel starttype (e) endtype (e)
  length 210
  formants vowel/e:
endphoneme


phoneme i
  vowel starttype (i) endtype (i)
  length 200
  formants vowel/i:
endphoneme


phoneme o
  vowel starttype (o) endtype (o)
  length 210
  formants vowel/O:
endphoneme


phoneme u
  vowel starttype (u) endtype (u)
  length 200
  formants vowel/u:
endphoneme


phoneme aU
  vowel starttype (a) endtype (u)
  length 230
  formants vowel/aU
endphoneme


phoneme eU
  vowel starttype (e) endtype (u)
  length 230
  formants vowel/eU
endphoneme


phoneme aI
  vowel starttype (a) endtype (i)
  length 230
  formants vowel/aI
endphoneme


phoneme eI
  vowel starttype (e) endtype (i)
  length 230
  formants vowel/eI
endphoneme


phoneme OI
  vowel starttype (o) endtype (i)
  length 230
  formants vowel/OI
endphoneme


phoneme uI
  vowel starttype (u) endtype (i)
  length 240
  formants vowel/uI
endphoneme


// CONSONANTS
//===========

phoneme r
  liquid
  length 100
  lengthmod 7
  beforenotvowel r/
  trill
  formants r/rr
  after _ r/rr
  after t r/trr p r/trr k r/trr
  before _ r/r_
endphoneme


phoneme r/   // used for [r] when not preceding a vowel
  liquid
  length 100
  lengthmod 2   //
  formants r3/r_+r3/rx
  before n   r3/r_n+r3/rx
  after _ r/rr
  after t r/trr p r/trr k r/trr
endphoneme


phoneme ts
  vls alv afr sibilant
  vowelin f1=0  f2=1700 -300 300  f3=-100 80
  vowelout f1=0 f2=1700 -300 250  f3=-100 80  rms=20
  lengthmod 2
  wave unvoc/ts
endphoneme


