phoneme @   //  Schwa
  vowel starttype (@) endtype (@)
  formants vowel/@_3
  unstressed
  before r/  vwl_de/3+50     // replace [@r] by [3]
  length 125
endphoneme


phoneme 3   //  open Schwa
  vowel starttype (@) endtype (@)
  formants vwl_de/3
  unstressed
  length 160
endphoneme


phoneme a
  vowel starttype (a) endtype (a)
  length 150
  formants vowel/a
  before r/ vwl_de/r_a+100
endphoneme


phoneme E
  vowel starttype (e) endtype (e)
  length 140
  formants vowel/ee
  before r/ vwl_de/r_ee+120
endphoneme


phoneme E2    //  as[E] but reduces to @ if unstressed
  vowel starttype (e) endtype (e)
  length 140
  formants vowel/ee_2
  before r/ vwl_de/r_ee+120
  reduceto @  0
endphoneme


phoneme I
  vowel starttype (i) endtype (i)
  length 120
  formants vowel/ii_2
  before r/ vwl_de/r_I+70
  linkout ;
endphoneme


phoneme I:
  vowel starttype (i) endtype (i)
  length 190
  formants vowel/ii_2
endphoneme


phoneme O
  vowel starttype (o) endtype (o)
  length 150
  formants vowel/oo
  before r/ vwl_en_n/O@+60
endphoneme


phoneme U
  vowel starttype (u) endtype (u)
  length 150
  formants vowel/uu_2
  before r/ vwl_de/r_U+70
endphoneme


