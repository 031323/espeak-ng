  vowel starttype (a) endtype (a)
  length 240
  formants vowel/aa_6
endphoneme


phoneme i:
  vowel starttype (i) endtype (i)
  length 180
  formants vowel/i_2
  after w w/wi2
endphoneme


phoneme u:
  vowel starttype (u) endtype (u)
  length 190
//  formants vwl_de/u:
  formants vowel/u
endphoneme


phoneme aU
  vowel starttype (a) endtype (u)
  length 220
  formants vdiph/aau_2
endphoneme


