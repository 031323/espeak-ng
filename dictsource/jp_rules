	い)	ん	(L03	i~	// i) n (s
		ん	(L04	u~	//    n (sh
	い)	ん	(L04	i~	// i) n (sh
		ん	(L05	n	//    n (z
		ん	(L06	n	//    n (j
		ん	(L07	n	//    n (t
		ん	(L08	n	//    n (ch
		ん	(L09	n	//    n (ts
		ん	(L10	n	//    n (d
		ん	(L11	n	//    n (n
		ん	(L12	u~	//    n (h
	い)	ん	(L12	i~	// i) n (h
		ん	(L13	u~	//    n (f
	い)	ん	(L13	i~	// i) n (f
		ん	(L14	m	//    n (b
		ん	(L15	m	//    n (p
		ん	(L16	m	//    n (m
		ん	(L17	u~	//    n (y
	い)	ん	(L17	i~	// i) n (y
