	ね	ne_o		// ne

.group の
	の	no_o		// no

.group は
	は	ha_"		// ha
	ば	ba_"		// ba
	ぱ	pa_"		// pa

.group ひ
	ひ	Ci		// hi
	ひ (L21	C		// hy([auo]
	び	bi		// bi
	び (L21	b_j		// by([auo]
	ぴ	pi		// pi
	ぴ (L21	p_j		// py([auo]

.group ふ
	ふ	p\\M_Bo		// fu
	ぶ	bM_Bo		// bu
	ぷ	pM_Bo		// pu

